  "version": "0.2.0",
  "configurations": [
    {
      "args": [
        "dev"
      ],
      "name": "dev",
      "program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "Test All",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "testDebug"
      ],
      "console": "integratedTerminal",
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "name": "Test Current FIle",
      "request": "launch",
      "runtimeArgs": [
        "run-script",
        "testDebug"
      ],
      "args": [
        "tests/${fileBasename}"
      ],
      "console": "integratedTerminal",
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
  ]
}